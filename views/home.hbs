
<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h1>Project {{list.length}}</h1>
                <h5>List all project </h5>
            </div>
        </div>
        <!-- /. ROW  -->
        <hr />
             
        <div class="row" >
            {{# each list }}
            <div class="col-md-4 col-sm-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        {{ this.project }}
                    </div>
                    <div class="panel-body">
                        <p class="main-text">{{ this.formsubmitted }} Number of Forms</p>
                        <p class="text-muted">{{ this.totalUser }} Number of Users</p>
                    </div>
                    <div class="panel-footer">
                         <a href="../project/{{this._id}}"/>Details </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <!-- /. ROW  -->
        <hr />
        {{#if projectDetails}}
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Project Details
                    </div>
                    <div class="well">
                        <h3>
                            {{projectDetails.project}}
                        </h3>                       
                        <h4>
                            {{projectDetails.description}}
                        </h4> 
                        <a href="http://localhost:3000/projectOne/{{ projectDetails._id }}">Edit</a>
                    </div>
                  
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs">
                            {{#if userFlag}}
                                <li class="">
                            {{ else }}
                                 <li class="active">
                            {{/if}}
                                <a href="#forms" data-toggle="tab" aria-expanded="true">Forms</a>
                            </li>
                            {{#if userFlag}}
                                <li class="active">
                            {{ else }}
                                 <li class="">
                            {{/if}}
                                <a href="#users" data-toggle="tab" aria-expanded="false">Users</a>
                            </li>
                        </ul>
                        
                      
                        <!-- Tab panes -->
                        <div class="tab-content">
                        {{#if userFlag}}
                            <div class="tab-pane fade " id="forms">
                        {{ else }}
                              <div class="tab-pane fade active in" id="forms">
                        {{/if}}
                          
                                <div class="col-md-12">
                                    <h4>Add Form</h4>
                                    <div class="row">
                                        {{#if err}}
                                        <div class="alert alert-danger">{{err}}</div>
                                        {{/if}} 
                                        {{#if msg}}
                                        <div class="alert alert-success">{{msg}}</div>
                                        {{/if}}
                                        <form method="post" action="http://localhost:3000/createForm/">
                                            <div class="form-group">
                                                <div class="form-row">
                                                    <div class="col-md-4">
                                                        <label>Form Name : </label>
                                                        <div class="form-label-group">
                                                            <input type="hidden" class="form-control"  name="project" value="{{projectDetails._id }}">
                                                            <input type="text" class="form-control" placeholder="Form Name" name="name">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label>Shapes:</label>
                                                        <div class="form-label-group">
                                                            <select class="form-control" id="shape" name="shape">
                                                            <option value="Point">Point</option>
                                                            <option value="Polygon">Polygon</option>
                                                            <option value="Circle">Circle</option>
                                                        </select> 
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label>Add Form:</label>
                                                        <div class="form-label-group">
                                                            <button type="submit" class="btn btn-primary btn-block">Add Form To Project</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <hr>
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                            <thead>
                                                <tr>
                                                    <th>Form Name</th>
                                                    <th>Shape</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                
                                                {{# each projectDetails.forms }}
                                                <tr class="odd gradeX">
                                                    <td>{{ this.name }}</td>
                                                    <td>{{ this.shape }}</td>
                                                    <td><a href="http://localhost:3000/form/{{ this._id }}"><button type="button" class="btn btn-danger btn-xs">Delete</button></a></td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            {{#if userFlag}}
                                <div class="tab-pane fade active in " id="users">
                            {{ else }}
                                <div class="tab-pane fade" id="users">
                            {{/if}}
                                 <div class="col-md-12">
                                    <h4>Add User</h4>
                                    <div class="row">
                                        {{#if err}}
                                        <div class="alert alert-danger">{{err}}</div>
                                        {{/if}} 
                                        {{#if msg}}
                                        <div class="alert alert-success">{{msg}}</div>
                                        {{/if}}
                                        <form method="post" action="http://localhost:3000/createUser/">
                                            <div class="form-group">
                                                <div class="form-row">
                                                    <div class="col-md-2">
                                                        <label>First Name : </label>
                                                        <div class="form-label-group">
                                                            <input type="hidden" class="form-control"  name="project" value="{{projectDetails._id }}">
                                                            <input type="text" class="form-control" placeholder="First Name" name="firstName">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label>Last Name : </label>
                                                        <div class="form-label-group">
                                                            <input type="text" class="form-control" placeholder="Last Name" name="lastName">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label>Age : </label>
                                                        <div class="form-label-group">
                                                            <input type="Number" class="form-control" placeholder="Enter age" name="age">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label>Add Form:</label>
                                                        <div class="form-label-group">
                                                            <button type="submit" class="btn btn-primary btn-block">Add User To Project</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <hr>
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                            <thead>
                                                <tr>
                                                    <th>Image</th>
                                                    <th>First Name</th>
                                                    <th>Last Name</th>
                                                    <th>Age</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                
                                                {{# each projectDetails.profile }}
                                                <tr class="odd gradeX">
                                                    <td><img src="{{ this.imageURL }}" width="50px" height="40px" /></td>
                                                    <td>{{ this.firstName }}</td>
                                                    <td>{{ this.lastName }}</td>
                                                    <td>{{ this.age }}</td>
                                                    <td><a href="http://localhost:3000/user/{{ this._id }}"><button type="button" class="btn btn-danger btn-xs">Delete</button></a></td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
             
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
        </div>
        {{/if}}

    </div>
    <!-- /. PAGE INNER  -->
</div>